/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.blueButton {
  width: 80% !important;
  height: 40px;

  align-items: center;
  z-index: 9;
  background-color: rgb(135, 181, 214);
  border: none;
  color: rgb(255, 255, 255);
  border-radius: 50px;
  font-size: 16px;
  padding: 0px;
  text-align: center;
  line-height: 23px;
  font-weight: normal;
  font-style: normal;
  animation-iteration-count: 1;
  animation-duration: 1s;
  opacity: 1;
  display: flex;
  justify-content: center;
  position: absolute;

}

.page-body {
  width: 80%;
}

.input_box_wrapper {
  border-radius: 25px;
  width: 100%;
  height: 38px;
  display: inline-block;
  background: rgb(245, 245, 245);
  margin-bottom: 15px;
}

.image-wrapper {
  width: 20%;
  display: inline-block;
  height: 50%;
  margin-bottom: 10px
}

.input_box {
  width: 80%;
  display: inline-block;
  height: 100%;
}
.keywordInput {
  display: flex;
  text-align: center;
  width: 650rpx;
  margin: 30rpx;
}
.keywordInput .tips {
  color: #9A9A9A;
  padding-top: 5rpx;
}
.keywordInput .input {
  height: 50rpx;
  border-radius: 10rpx;
  border-style: solid;
  border-width: 5rpx;
  border-color: #87B5D6;
}
.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  border: 1rpx solid #ffffff;
  border-radius: 100rpx;
  background-color: #87B5D6;
  color: #ffffff;
  font-size: small;
  font-weight: bolder;
  margin-top: 40rpx;
  margin-bottom: 90rpx;
}
.items .items_group .items_title {
  width: 100%;
  display: block;
  padding: 20rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 700;
  font-size: 50rpx;
  color: #1d1d1d;
  text-decoration: none;
}
.items .items_group .items_list navigator {
  margin: 80rpx;
  padding: 30rpx;
  border-color: #a3a3a3;
  border-width: 5rpx;
  border-style: solid;
  border-radius: 8px;
}
.items .items_group .items_list image {
  overflow: hidden;
  width: 500rpx;
  height: 300rpx;
}
.items .items_group .items_list .recommend {
  width: 320rpx;
  font-family: PingFangSC;
  font-weight: 700;
  font-size: 30rpx;
  color: #444444;
  font-style: normal;
  letter-spacing: 0px;
  line-height: 30rpx;
  text-decoration: none;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 12px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #888;
}

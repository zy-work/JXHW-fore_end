<view class="keywordInput">
    <text class="tips">输入关键词：</text>
    <input class="input" placeholder-style="color:#000000" bindinput="input_keyword"/>
</view>

<button class="button" bindtap="submit">搜索</button>

<view class="items">
    <view class="items_group">
        <view class="items_title">
            搜索结果
        </view>
        <view class="items_list">
            <navigator url="/pages/message/message?pid={{item2.postId}}" open-type="navigate"
            wx:for="{{items_list}}"
            wx:for-item="item2"
            wx:for-index="index2"
            wx:key="postId">
                <image src="{{item2.coverLink}}" mode="widthFix"></image>
                <view class="recommend">{{item2.title}}</view>
            </navigator>
        </view>
    </view>
</view>


<view class="weui-loadmore" hidden="{{hidden}}">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">努力加载中</view>
</view>  
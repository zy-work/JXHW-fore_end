checkbox {
  display: block;
  height: 100rpx;
  border-style: solid;
  border-width: 5rpx;
  border-radius: 8rpx;
  border-color: #87b5d6;
  padding: 10rpx;
  margin: 10rpx;
}
checkbox .user_image {
  width: 100rpx;
  height: 80rpx;
}
checkbox text {
  padding: 10rpx;
}
.submit {
  border-radius: 30rpx;
  background-color: #87b5d6;
  text-align: center;
  height: 100rpx;
  margin: 50rpx;
  padding: 30rpx;
}

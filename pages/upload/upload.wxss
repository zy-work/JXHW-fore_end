/* pages/upload/upload.wxss */
.page{
    display: flex;
    flex-direction: column;
}
.text{
    display: flex;
    flex-direction: column;
    margin-top: 70rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-bottom: 50rpx;
}
.title{
    font-size: x-large;
    font-weight: bolder;
    margin-bottom: 20rpx;
}
.require{
    font-size: small;
    font-weight: bolder;
    color: rgb(175,175,175);
}
.item-info{
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    margin-left: 40rpx;
    margin-right: 40rpx;
}
.uploadImg{
    width: 180rpx;
    height: 240rpx;
    background-color: rgb(245,245,245);
    border: 1rpx solid #ffffff;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.comment{
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}
.comment_title{
    border: 1rpx solid #ffffff;
    border-radius: 10rpx;
    background-color: #F5F5F5;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
}
.comment_content{
    width: 630rpx;
    height: 250rpx;
    border: 1rpx solid #ffffff;
    border-radius: 10rpx;
    background-color: #F5F5F5;
    padding: 20rpx;
}
.score{
    display: flex;
    margin-bottom: 20rpx;
    align-items: center;
}
.score_icon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}
.score_class{
    font-weight: bolder;
    margin-right: 40rpx;
}
.item_score{
    font-size: small;
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    background-color: #F5F5F5;
    padding: 5rpx 10rpx;
}
.picker{
    background-color: #F5F5F5;
    border:1rpx solid #e0e0ee;
    border-radius: 10rpx;
    padding:10rpx;
    margin-bottom: 40rpx;
}
.Button{
    width: 400rpx;
    height:100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: small;
    font-weight: bolder;
    color: #ffffff;
    background-color: #87B5D6;
    border: 1rpx solid #ffffff;
    border-radius: 25rpx;
    margin-bottom: 50rpx;
}